{
    "Parameters": {
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "HellopyS3Version": {
            "Type": "String"
        },
        "Region": {
            "Description": "AWS Region",
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "VersionS3Version": {
            "Type": "String"
        }
    },
    "Resources": {
        "ContribLambdasVersion": {
            "DependsOn": [
                "VersionRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "contrib_lambdas_version.zip",
                    "S3ObjectVersion": {
                        "Ref": "VersionS3Version"
                    }
                },
                "Description": "Publishes new versions of Lambdas.",
                "Handler": "version.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "VersionRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "EveryNightRule": {
            "Properties": {
                "Description": "",
                "EventPattern": {
                    "Ref": "AWS::NoValue"
                },
                "ScheduleExpression": "rate(5 minutes)",
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Ref": "HellopyCurrentalias"
                        },
                        "Id": "HellopyCurrentalias",
                        "Input": "",
                        "InputPath": ""
                    }
                ]
            },
            "Type": "AWS::Events::Rule"
        },
        "EveryNightRulePermission": {
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "HellopyCurrentalias"
                },
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "EveryNightRule",
                        "Arn"
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "HellopyCurrentalias": {
            "DependsOn": [
                "HellopyVersion"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "HelloworldHellopy"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "HellopyVersion",
                        "Version"
                    ]
                },
                "Name": "current"
            },
            "Type": "AWS::Lambda::Alias"
        },
        "HellopyRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "HellopyLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "HellopyVersion": {
            "DependsOn": [
                "VersionCurrentalias",
                "HelloworldHellopy"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "HelloworldHellopy"
                },
                "S3ObjectVersion": {
                    "Ref": "HellopyS3Version"
                },
                "ServiceToken": {
                    "Ref": "VersionCurrentalias"
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "HelloworldHellopy": {
            "DependsOn": [
                "HellopyRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "helloworld_hellopy.zip",
                    "S3ObjectVersion": {
                        "Ref": "HellopyS3Version"
                    }
                },
                "Description": "",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "HellopyRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 3
            },
            "Type": "AWS::Lambda::Function"
        },
        "UpdateDnsRule": {
            "Properties": {
                "Description": "",
                "EventPattern": {
                    "detail": {
                        "state": [
                            "pending"
                        ]
                    },
                    "source": [
                        "aws.ec2"
                    ]
                },
                "ScheduleExpression": "rate(3 minutes)",
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Ref": "HellopyCurrentalias"
                        },
                        "Id": "HellopyCurrentalias",
                        "Input": "",
                        "InputPath": ""
                    }
                ]
            },
            "Type": "AWS::Events::Rule"
        },
        "UpdateDnsRulePermission": {
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "HellopyCurrentalias"
                },
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "UpdateDnsRule",
                        "Arn"
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "VersionCurrentalias": {
            "DependsOn": [
                "VersionVersion"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribLambdasVersion"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "VersionVersion",
                        "Version"
                    ]
                },
                "Name": "current"
            },
            "Type": "AWS::Lambda::Alias"
        },
        "VersionRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "VersionLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:PublishVersion",
                                        "lambda:GetFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "VersionManageVersionPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "VersionVersion": {
            "DependsOn": [
                "ContribLambdasVersion",
                "ContribLambdasVersion"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribLambdasVersion"
                },
                "S3ObjectVersion": {
                    "Ref": "VersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ContribLambdasVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        }
    }
}