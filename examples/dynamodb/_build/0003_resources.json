{
    "Parameters": {
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "DynamoIntegrationArn": {
            "Type": "String"
        },
        "DynamoconsumerS3Version": {
            "Type": "String"
        },
        "LambdaAliasS3Version": {
            "Type": "String"
        },
        "LambdaVersionS3Version": {
            "Type": "String"
        },
        "Region": {
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "SleepS3Version": {
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        }
    },
    "Resources": {
        "CloudformationLambdaAlias": {
            "DependsOn": [
                "LambdaAliasRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda_alias.zip",
                    "S3ObjectVersion": {
                        "Ref": "LambdaAliasS3Version"
                    }
                },
                "Description": "Manages aliases of Lambdas.",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaAliasRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "CloudformationLambdaVersion": {
            "DependsOn": [
                "LambdaVersionRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "lambda_version.zip",
                    "S3ObjectVersion": {
                        "Ref": "LambdaVersionS3Version"
                    }
                },
                "Description": "Publishes new versions of Lambdas.",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaVersionRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "CloudformationSleep": {
            "DependsOn": [
                "SleepRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "sleep.zip",
                    "S3ObjectVersion": {
                        "Ref": "SleepS3Version"
                    }
                },
                "Description": "Sleeps several seconds before succeeding.",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "SleepRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "DynamoconsumerCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ExampleappDynamoconsumer"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "DynamoconsumerVersion",
                        "Version"
                    ]
                },
                "Name": "Current",
                "S3ObjectVersion": {
                    "Ref": "DynamoconsumerS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "CloudformationLambdaAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "DynamoconsumerRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "DynamoconsumerLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "dynamodb:DescribeStream",
                                        "dynamodb:ListStreams",
                                        "dynamodb:GetShardIterator",
                                        "dynamodb:GetRecords"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:dynamodb:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "DynamoconsumerReadDynamoPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "DynamoconsumerVersion": {
            "Properties": {
                "FunctionName": {
                    "Ref": "ExampleappDynamoconsumer"
                },
                "S3ObjectVersion": {
                    "Ref": "DynamoconsumerS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "CloudformationLambdaVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "ExampleDynamoIntegration": {
            "DependsOn": [
                "ExampleDynamoIntegrationSleep",
                "ExampleappDynamoconsumer"
            ],
            "Properties": {
                "BatchSize": 1,
                "Enabled": true,
                "EventSourceArn": {
                    "Ref": "DynamoIntegrationArn"
                },
                "FunctionName": {
                    "Ref": "ExampleappDynamoconsumer"
                },
                "StartingPosition": "LATEST"
            },
            "Type": "AWS::Lambda::EventSourceMapping"
        },
        "ExampleDynamoIntegrationSleep": {
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "CloudformationSleep",
                        "Arn"
                    ]
                },
                "Time": 30
            },
            "Type": "Custom::Sleep"
        },
        "ExampleappDynamoconsumer": {
            "DependsOn": [
                "DynamoconsumerRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "dynamoconsumer.zip",
                    "S3ObjectVersion": {
                        "Ref": "DynamoconsumerS3Version"
                    }
                },
                "Description": "",
                "Handler": "code.handler",
                "MemorySize": 192,
                "Role": {
                    "Fn::GetAtt": [
                        "DynamoconsumerRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 3
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaAliasCurrentalias": {
            "Properties": {
                "FunctionName": {
                    "Ref": "CloudformationLambdaAlias"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "LambdaAliasVersion",
                        "Version"
                    ]
                },
