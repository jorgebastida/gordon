{
    "Parameters": {
        "AliasS3Version": {
            "Type": "String"
        },
        "CodeBucket": {
            "Description": "Bucket where the code is located.",
            "Type": "String"
        },
        "ConsumerS3Version": {
            "Type": "String"
        },
        "KinesisIntegrationArn": {
            "Type": "String"
        },
        "Region": {
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "SleepS3Version": {
            "Type": "String"
        },
        "Stage": {
            "Default": "dev",
            "Description": "Name of the Stage",
            "Type": "String"
        },
        "VersionS3Version": {
            "Type": "String"
        }
    },
    "Resources": {
        "AliasCurrentalias": {
            "DependsOn": [
                "ContribLambdasAlias"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribLambdasAlias"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "AliasVersion",
                        "Version"
                    ]
                },
                "Name": "current",
                "S3ObjectVersion": {
                    "Ref": "AliasS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ContribLambdasAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "AliasRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "AliasLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:CreateAlias",
                                        "lambda:DeleteAlias",
                                        "lambda:GetAlias",
                                        "lambda:UpdateAlias"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "AliasReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "AliasVersion": {
            "DependsOn": [
                "ContribLambdasVersion"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribLambdasAlias"
                },
                "S3ObjectVersion": {
                    "Ref": "AliasS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ContribLambdasVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "ConsumerCurrentalias": {
            "DependsOn": [
                "AliasCurrentalias"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "KinesisconsumerConsumer"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "ConsumerVersion",
                        "Version"
                    ]
                },
                "Name": "current",
                "S3ObjectVersion": {
                    "Ref": "ConsumerS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "AliasCurrentalias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "ConsumerRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "ConsumerLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "kinesis:DescribeStream",
                                        "kinesis:ListStreams",
                                        "kinesis:GetShardIterator",
                                        "kinesis:GetRecords"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": {
                                        "Ref": "KinesisIntegrationArn"
                                    }
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "ConsumerReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "ConsumerVersion": {
            "DependsOn": [
                "VersionCurrentalias"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "KinesisconsumerConsumer"
                },
                "S3ObjectVersion": {
                    "Ref": "ConsumerS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "VersionCurrentalias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "ContribHelpersSleep": {
            "DependsOn": [
                "SleepRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "contrib_helpers_sleep.zip",
                    "S3ObjectVersion": {
                        "Ref": "SleepS3Version"
                    }
                },
                "Description": "Sleeps several seconds before succeeding.",
                "Handler": "sleep.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "SleepRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "ContribLambdasAlias": {
            "DependsOn": [
                "AliasRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "contrib_lambdas_alias.zip",
                    "S3ObjectVersion": {
                        "Ref": "AliasS3Version"
                    }
                },
                "Description": "Manages aliases of Lambdas.",
                "Handler": "alias.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "AliasRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "ContribLambdasVersion": {
            "DependsOn": [
                "VersionRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "contrib_lambdas_version.zip",
                    "S3ObjectVersion": {
                        "Ref": "VersionS3Version"
                    }
                },
                "Description": "Publishes new versions of Lambdas.",
                "Handler": "version.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "VersionRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 300
            },
            "Type": "AWS::Lambda::Function"
        },
        "KinesisIntegration": {
            "DependsOn": [
                "KinesisIntegrationSleep",
                "ConsumerCurrentalias"
            ],
            "Properties": {
                "BatchSize": 1,
                "Enabled": true,
                "EventSourceArn": {
                    "Ref": "KinesisIntegrationArn"
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "ConsumerCurrentalias",
                        "Arn"
                    ]
                },
                "StartingPosition": "LATEST"
            },
            "Type": "AWS::Lambda::EventSourceMapping"
        },
        "KinesisIntegrationSleep": {
            "DependsOn": [
                "SleepCurrentalias"
            ],
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "SleepCurrentalias",
                        "Arn"
                    ]
                },
                "Time": 30
            },
            "Type": "Custom::Sleep"
        },
        "KinesisconsumerConsumer": {
            "DependsOn": [
                "ConsumerRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "CodeBucket"
                    },
                    "S3Key": "kinesisconsumer_consumer.zip",
                    "S3ObjectVersion": {
                        "Ref": "ConsumerS3Version"
                    }
                },
                "Description": "My kinesis consumer",
                "Handler": "code.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "ConsumerRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 3
            },
            "Type": "AWS::Lambda::Function"
        },
        "SleepCurrentalias": {
            "DependsOn": [
                "AliasCurrentalias"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribHelpersSleep"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "SleepVersion",
                        "Version"
                    ]
                },
                "Name": "current",
                "S3ObjectVersion": {
                    "Ref": "SleepS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "AliasCurrentalias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "SleepRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "SleepLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "SleepVersion": {
            "DependsOn": [
                "VersionCurrentalias"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribHelpersSleep"
                },
                "S3ObjectVersion": {
                    "Ref": "SleepS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "VersionCurrentalias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        },
        "VersionCurrentalias": {
            "DependsOn": [
                "ContribLambdasAlias"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribLambdasVersion"
                },
                "FunctionVersion": {
                    "Fn::GetAtt": [
                        "VersionVersion",
                        "Version"
                    ]
                },
                "Name": "current",
                "S3ObjectVersion": {
                    "Ref": "VersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ContribLambdasAlias",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaAlias"
        },
        "VersionRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "VersionLogsPolicy"
                    },
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "lambda:PublishVersion",
                                        "lambda:GetFunction"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:lambda:*:*:*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "VersionReadKinesisPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "VersionVersion": {
            "DependsOn": [
                "ContribLambdasVersion"
            ],
            "Properties": {
                "FunctionName": {
                    "Ref": "ContribLambdasVersion"
                },
                "S3ObjectVersion": {
                    "Ref": "VersionS3Version"
                },
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ContribLambdasVersion",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaVersion"
        }
    }
}